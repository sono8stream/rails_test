<h1>記事一覧</h1>
<br>
<%= link_to '記事を書く', new_article_path, class: "btn btn-primary" %>
<div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button"
        id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        並べ替え
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <li><a href="#">Date</a></li>
        <li><a href="#">Author</a></li>
        <li><a href="#">Name</a></li>
    </ul>
</div>
<br>
<table class="table table-striped table-condensed">
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td><%= link_to article.title, article_path(article)%></td>
			<td><%= article.text[0,3]+"..."%></td>
			<td><%= link_to '編集', edit_article_path(article) %></td>
			<td><%= link_to '削除', article_path(article),
					method: :delete,
					data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>
<br><br>
<%= link_to fa_icon("home", text: 'Home'), root_path, class: "btn btn-primary btn-lg" %>